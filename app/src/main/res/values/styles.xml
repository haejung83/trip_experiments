<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/nanum_gothic_font</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/nanum_gothic_font</item>
    </style>

    <!-- Label: Black -->
    <style name="Base.AppTheme.Label" parent="Base.AppTheme">
        <item name="android:textColor">@color/all_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.AppTheme.Label.Big" parent="Base.AppTheme.Label">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Base.AppTheme.Label.Medium" parent="Base.AppTheme.Label">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.AppTheme.Label.Small" parent="Base.AppTheme.Label">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Label: White -->
    <style name="Base.AppTheme.LabelWhite" parent="Base.AppTheme">
        <item name="android:textColor">@color/all_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.AppTheme.LabelWhite.Big" parent="Base.AppTheme.LabelWhite">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Base.AppTheme.LabelWhite.Medium" parent="Base.AppTheme.LabelWhite">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.AppTheme.LabelWhite.Small" parent="Base.AppTheme.LabelWhite">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
