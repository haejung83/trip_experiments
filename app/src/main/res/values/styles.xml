<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ProgressBar -->
    <style name="Widget.TripStore.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <!-- BottomNavigationBar -->
    <style name="Widget.TripStore.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/ts_color_secondary</item>
        <item name="itemTextColor">@color/ts_color_secondary</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.TripStore.BottomNavigation
        </item>
    </style>

</resources>
