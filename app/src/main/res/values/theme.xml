<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.TripStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Text Appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TripStore.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TripStore.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TripStore.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TripStore.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TripStore.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TripStore.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TripStore.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TripStore.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TripStore.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TripStore.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TripStore.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TripStore.Caption</item>

        <!-- System UI (StatusBar, NavigationBar) -->
        <item name="android:statusBarColor">@color/ts_color_status_bar</item>
        <item name="android:navigationBarColor">@color/ts_color_navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?colorControlHighlight
        </item>
    </style>

    <style name="TripStore" parent="Base.TripStore">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/nanum_gothic_font</item>
        <item name="fontFamily">@font/nanum_gothic_font</item>
        <!-- Progress Bar -->
        <item name="android:progressBarStyleHorizontal">@style/Widget.TripStore.ProgressBar</item>
    </style>

    <style name="TripStore.Red" parent="TripStore">
        <item name="colorPrimary">@color/ts_color_primary</item>
        <item name="colorPrimaryVariant">@color/ts_color_primary_variant</item>
        <item name="colorSecondary">@color/ts_color_secondary</item>
        <item name="colorSecondaryVariant">@color/ts_color_secondary_variant</item>

        <item name="android:colorBackground">@color/ts_color_background</item>
        <item name="colorSurface">@color/ts_color_surface</item>
        <item name="colorError">@color/ts_color_error</item>

        <item name="colorOnPrimary">@color/ts_color_on_primary</item>
        <item name="colorOnSecondary">@color/ts_color_on_secondary</item>
        <item name="colorOnBackground">@color/ts_color_on_background</item>
        <item name="colorOnSurface">@color/ts_color_on_surface</item>
        <item name="colorOnError">@color/ts_color_on_error</item>

        <item name="colorPrimaryDark">@color/ts_color_primary_variant</item>
        <item name="colorAccent">@color/ts_color_secondary</item>
    </style>

</resources>